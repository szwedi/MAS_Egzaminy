doctype 5
html
	head
		title Egzaminy
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
		script(src='/javascripts/jquery-1.10.0.min.js')
		script(src='/javascripts/skrypt.js')
	body
		.container-narrow
			.masthead
				ul.nav.nav-pills.pull-right
					if(session.login == true)
						li
							p Hello #{session.userLogin}
						li.active
							a(href='/logout') Logout
					else
						li.active
							a(href='/loginPanel') Login
				a(href='/')
					h3.muted Egzaminy
		if(session.login == true)
			.navbar
				.navbar-inner
					.container
						if(session.typ == 'student')
							ul.nav
								li
									a(href='#') Actual exams
								li
									a(href='#') Archival exams
						if(session.typ == 'wykladowca')
							ul.nav
								li
									a(href='#') Manage questions
								li
									a(href='/classPanel') Manage classes
								li
									a(href='#') Compose test
								li
									a(href='#') Activate test
								li
									a(href='#') Generate report
		block content